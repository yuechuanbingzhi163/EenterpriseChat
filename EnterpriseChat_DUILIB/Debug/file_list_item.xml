<?xml version="1.0" encoding="UTF-8"?>
<Window>
  <ListContainerElement>
    <VerticalLayout>
		<VerticalLayout height="40">
			<HorizontalLayout>
				<VerticalLayout name="logo_container" width="50" inset="4,4,4,4">
					<Button name="logo"  normalimage="default.png" width="32" height="32" />
				</VerticalLayout>
				<VerticalLayout width="150" inset="0,2,0,0">
					<HorizontalLayout>
						<Label name="filename"  text="test_file.word" bordersize="0"  height="18" font="25" width="150" textcolor="#FF000000" disabledtextcolor="#FF808080" />
						<Label name="realfilename" text="" visiable="false"/>
						<Label name="savefilename" text="" visiable="false"/>
						<Label name="type"   text=""  visiable="false" />
					</HorizontalLayout>
					<HorizontalLayout height="5" />
					<Progress name="download" float="false" foreimage="file='progress_fore.png'" min="0" max="100" value="100" maxheight="10" maxwidth="150"  />
					<HorizontalLayout height="5" />
				</VerticalLayout>
				<VerticalLayout width="90">
					<HorizontalLayout  height="20" width="90" inset="5,2,1,1">
						<Label name="filelength" text="文件大小" height="18" align="left"/>
					</HorizontalLayout >
					<HorizontalLayout height="20" >
						<VerticalLayout inset="5,2,1,1">
							<Button name="open" text="打开"  height="18" width="25" endellipsis="true"  pushedtextcolor="0x0000ff" tooltip="打开所在文件夹"/>
						</VerticalLayout>
						<VerticalLayout inset="5,2,1,1">
							<Button name="state" text="接受" height="18" width="25"  pushedtextcolor="0x0000ff" align="right"/>
						</VerticalLayout>
					</HorizontalLayout>
				</VerticalLayout>
			</HorizontalLayout>
		</VerticalLayout>
    </VerticalLayout>
  </ListContainerElement>
</Window>